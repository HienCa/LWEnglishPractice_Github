    <script>
        //Navigation
        const homeBtn = document.getElementById("homeBtn");
        const rankingBtn = document.getElementById("rankingBtn");
        const learningBtn = document.getElementById("learningBtn");
        const profileBtn = document.getElementById("profileBtn");
        const home = document.getElementById("home");
        const ranking = document.getElementById("ranking");
        const learning = document.getElementById("learning");
        const profile = document.getElementById("profile");

        window.addEventListener("load", function () {
            home.style.display = "block";
            homeBtn.style.backgroundColor = "#DDF4FF";
            homeBtn.style.border = "2px solid #84D8FF";

            rankingBtn.style.backgroundColor = "";
            rankingBtn.style.border = "none";

            learningBtn.style.backgroundColor = "";
            learningBtn.style.border = "none";

            profileBtn.style.backgroundColor = "";
            profileBtn.style.border = "none";

            ranking.style.display = "none";
            learning.style.display = "none";
            profile.style.display = "none";
        })
        homeBtn.addEventListener("click", function () {
            home.style.display = "block";
            homeBtn.style.backgroundColor = "#DDF4FF";
            homeBtn.style.border = "2px solid #84D8FF";

            rankingBtn.style.backgroundColor = "";
            rankingBtn.style.border = "none";

            learningBtn.style.backgroundColor = "";
            learningBtn.style.border = "none";

            profileBtn.style.backgroundColor = "";
            profileBtn.style.border = "none";

            ranking.style.display = "none";
            learning.style.display = "none";
            profile.style.display = "none";
        });
        rankingBtn.addEventListener("click", function () {
            ranking.style.display = "block";
            rankingBtn.style.backgroundColor = "#DDF4FF";
            rankingBtn.style.border = "2px solid #84D8FF";

            homeBtn.style.backgroundColor = "";
            homeBtn.style.border = "none";

            learningBtn.style.backgroundColor = "";
            learningBtn.style.border = "none";

            profileBtn.style.backgroundColor = "";
            profileBtn.style.border = "none";

            home.style.display = "none";
            learning.style.display = "none";
            profile.style.display = "none";
        });
        learningBtn.addEventListener("click", function () {
            learning.style.display = "block";
            learningBtn.style.backgroundColor = "#DDF4FF";
            learningBtn.style.border = "2px solid #84D8FF";

            rankingBtn.style.backgroundColor = "";
            rankingBtn.style.border = "none";

            homeBtn.style.backgroundColor = "";
            homeBtn.style.border = "none";

            profileBtn.style.backgroundColor = "";
            profileBtn.style.border = "none";

            home.style.display = "none";
            ranking.style.display = "none";
            profile.style.display = "none";
        });
        profileBtn.addEventListener("click", function () {
            profile.style.display = "block";
            profileBtn.style.backgroundColor = "#DDF4FF";
            profileBtn.style.border = "2px solid #84D8FF";

            rankingBtn.style.backgroundColor = "";
            rankingBtn.style.border = "none";

            learningBtn.style.backgroundColor = "";
            learningBtn.style.border = "none";

            homeBtn.style.backgroundColor = "";
            homeBtn.style.border = "none";

            home.style.display = "none";
            ranking.style.display = "none";
            learning.style.display = "none";
        });


        //Run audio
        const listenBtn = document.getElementById("listenBtn");
        const pauseBtn = document.getElementById("pauseBtn");
        const audioSource = document.getElementById("audioSource");
        listenBtn.addEventListener("click", function () {
            audioSource.play();
            listenBtn.style.display = "none";
            pauseBtn.style.display = "block";
        })
        //Pause audio
        pauseBtn.addEventListener("click", function () {
            audioSource.pause();
            listenBtn.style.display = "block";
            pauseBtn.style.display = "none";
        })

        //Choose speed
        const speedOption = document.getElementById("speedOption");
        window.addEventListener("load", function () {
            audioSource.playbackRate = 1;

        })
        speedOption.addEventListener("change", function () {
            audioSource.playbackRate = speedOption.value;

        })

        //Retry audio
        const retryBtn = document.getElementById("retryBtn");
        retryBtn.addEventListener("click", function () {
            audioSource.currentTime = 0;
        })
        //Next audio
        const nextBtn = document.getElementById("nextBtn");
        nextBtn.addEventListener("click", function () {
            audioSource.pause();
            audioSource.src = "./assets/1-2.mp3";
            inputText.disabled = false;
            inputText.value = "";
            audioSource.play();

        })

        //Hint audio
        function toggleDiv(div) {

            if (div.style.display == "none") {
                div.style.display = "block";
            } else {
                div.style.display = "none";
            }
        }
        const hintVisibleBtn = document.getElementById("hintVisibleBtn");
        hintVisibleBtn.addEventListener("click", function () {
            const audioText = document.getElementById("audioText");
            toggleDiv(audioText)
            hintHideBtn.style.display = "block";
            hintVisibleBtn.style.display = "none";


        })
        const hintHideBtn = document.getElementById("hintHideBtn");
        hintHideBtn.addEventListener("click", function () {
            const audioText = document.getElementById("audioText");
            toggleDiv(audioText)
            hintVisibleBtn.style.display = "block";
            hintHideBtn.style.display = "none";

        })

        //Check word typed




        //Check a char typed
        const inputText = document.getElementById("inputText");
        const scoreCurrent = document.getElementById("score");
        const audioText = document.getElementById("audioText").innerText.trim();
        let textCheck = audioText;
        let score = 0;

        const checkType = function () {
            let textTyped = document.getElementById("inputText").value;
            for (let i = 0; i < textTyped.length; i++) {
                console.log("audioText:" + audioText[i]);
                console.log("textTyped:" + textTyped[i]);
                console.log("audioText:" + audioText);
                if (audioText[i] === textTyped[i]) {
                    if (document.getElementById("audioText").innerText.trim() === textTyped) {
                        score += 100;
                        scoreCurrent.innerText = score;
                        console.log("BRE:");
                        inputText.disabled = true;
                        break;
                    }
                    console.log("T");
                }

                else {
                    inputText.value = textTyped.substring(0, textTyped.length - 1);
                    console.log("F");

                }
            }
        }
        // inputText.addEventListener("input", checkType);




        //Edit profile
        const editProfileBtn = document.getElementById("editProfileBtn");
        const editProfileForm = document.getElementById("editProfileForm");

        editProfileBtn.addEventListener("click", function () {
            toggleDiv(editProfileForm);
        });

    </script>
</body>

</html>